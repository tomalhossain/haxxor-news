<%= form_for @comment, url: comments_path do |f| %>
  <%= render 'shared/resource_errors', resource: @comment %>
  <%= f.text_area :content, placeholder: "Leave a " + type, cols: col, rows: row %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <% if type == "Reply" %>
    <%= f.hidden_field :comment_id, value: commentable.id %>
  <% end %>
  <%= f.submit type %>
<% end %>