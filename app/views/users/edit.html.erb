<h1>Update Your Profile</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', user: @user %> 

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Update my profile" %> 
<% end %> 
<br> 
