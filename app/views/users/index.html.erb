<h1>All Users</h1>

<%= will_paginate %> 

<ul style="list-style-type: none">
	<% @users.each do |user| %> 
		<li>
			<%= link_to user.name, user %> 
      <br> 
      <br>
      <%= gravatar_for user %> 
      <br>
      <% if current_user.admin? && current_user != user %>
        <br> 
        <%= link_to "delete", user, method: :delete, 
                              data: { confirm: "Are you Sure?" } %>
      <hr>
      <% end %> 
		</li>
	<% end %> 
</ul>

<%= will_paginate %> 


