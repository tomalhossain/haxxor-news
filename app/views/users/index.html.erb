<h1>All Users</h1>

<%= will_paginate %> 

<ul> 
	<% @users.each do |user| %> 
		<li>
			<%= gravatar_for user %> 
			<%= link_to user.name, user %> 
      <% if current_user.admin? && current_user != user %>
        <br>
        <%= link_to "delete", user, method: :delete, 
                              data: { confirm: "Are you Sure?" } %>
      <% end %> 
		</li>
	<% end %> 
</ul>

<%= will_paginate %> 


